@model Post

<div class="row p-1">
    <h2>
        @Model.title
    </h2>
    <p style="white-space:pre-wrap">@Html.Raw(@Model.content)</p>
    <i> written by @Model.author - uploaded @Model.date </i>
</div>
<div>
    <form asp-controller="Blog" asp-action="Comment" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group flex">
            <input name="postId" type="hidden" value=@Model.id />
            <input class="form-control" name="text" type="text">
            <button class="btn" type="submit">comment</button>
        </div>
    </form>
</div>
<div>
    <ul class="list-unstyled">
    @foreach(var comment in Model.Comments) {
        <li class="comment p-1 mt-1 mb-1">@comment.text</li>
    }
    </ul>
</div>
<div>
    <a href="/Blog">back</a>
</div>