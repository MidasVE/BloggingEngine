@model EntityFrameworkMvc.DataAccess.Post

<form asp-action="EditPost" method="post">
    <input type="hidden" asp-for=@Model.id value=@Model.id name="id">
    <label for="title">Title</label>
    <input asp-for=@Model.title name="title" input="text" value=@Model.title/>
    <label for="title">Content</label>
    <input asp-for=@Model.content name="content" input="text" value=@Model.content/>
    <label for="title">Author</label>
    <input asp-for=@Model.author name="author" input="text" value=@Model.author/>
    <input type="hidden" asp-for=@Model.date value=@DateTime.Now name="date">
    <button type="submit">Edit</button>
</form>